#!/usr/bin/env bash

# Update package list and install Nginx
sudo apt-get update
sudo apt-get install -y nginx

# Get the server hostname
hostname=$(hostname)

# Configure Nginx to add custom HTTP response header
echo "add_header X-Served-By $hostname;" | sudo tee -a /etc/nginx/sites-available/default

# Restart Nginx to apply the changes
sudo systemctl restart nginx

# Display a message indicating successful configuration
echo "Nginx configured on $hostname with custom HTTP response header X-Served-By"
