#!/usr/bin/env bash
# This script configures Nginx on a new Ubuntu machine to include a custom HTTP response header.

# Install Nginx
sudo apt-get update
sudo apt-get install -y nginx

# Add custom HTTP response header to Nginx configuration
echo 'add_header X-Served-By $hostname;' | sudo tee -a /etc/nginx/sites-available/default

# Restart Nginx to apply the changes
sudo systemctl restart nginx

# End of script
